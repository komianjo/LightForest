<Window x:Class="LightForest.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        ContentRendered="OnContentRendered" SizeChanged="OnSizeChanged"
        UseLayoutRounding="True" SnapsToDevicePixels="True" KeyDown="OnKeyDown" MouseWheel="OnMouseWheel">
   <Grid Background="#FF00AEEF">
      <Image Source="{Binding View}"
             Height="{Binding Path=ActualHeight, Mode=OneWay}"
             Width="{Binding Path=ActualWidth, Mode=OneWay}" />
   </Grid>
</Window>
